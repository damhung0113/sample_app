<% provide :title, t(".login") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label t ".email" %>
      <%= f.email_field :email, class: "form-control", value: params[:param] %>

      <%= f.label t ".password" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, class: "remember_me" %>
        <span><%= t ".auto_login" %></span>
      <% end %>

      <%= f.submit t ".login" %>
    <% end %>

    <p><%= t ".new_user" %> <%= link_to t(".signupnow"), users_signup_path %></p>
  </div>
</div>
